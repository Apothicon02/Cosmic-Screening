{
  "schema_version": 1,

  "quilt_loader": {
    "group": "${mod_group}",
    "id": "${mod_id}",
    "version": "${mod_version}",

    "intermediate_mappings":"net.fabricmc:intermediary",

    "metadata": {
      "name": "${mod_name}",
      "description": "Screenshot-related features for Cosmic Reach.",
      "contributors": {
        "Author": "Apothicon"
      },

      "contact": {
        "homepage": "https://github.com/Apothicon02/Cosmic-Screening",
        "issues": "https://discord.gg/HHqKa8vTAN",
        "sources": "https://github.com/Apothicon02/Cosmic-Screening"
      },

      "icon": "assets/cosmicscreening/icon.png"
    },

    "entrypoints": {
      "init": "com.apothicon.cosmicscreening.CosmicScreening"
    },

    "depends": [
      {
        "id": "cosmicquilt",
        "versions": "*"
      },
      {
        "id": "cosmicreach",
        "versions": "*"
      }
    ]
  },

  "mixin": "cosmicscreening.mixins.json"
}
